<% @posts.sort_by {|post| post.votes_score}.reverse.each do |post| %>
	<div class="entry" style="">
		<div class="votes" style="float:left;">
			<%= link_to post_votes_path(post, direction: "upvote"), :method => :post do %>
				<i class="icon-arrow-up"></i><% end %><br/>

			<span style="font-size:16px; margin-left:2px;"><%= post.votes_score %></span><br/>

			<%= link_to post_votes_path(post, direction: "downvote"), :method => :post do %>
				<i class="icon-arrow-down"></i><% end %>

		</div>

		<div class="title">

		<h2 class="titleheader">
			<%= link_to post.title, post %> </h2>
			<p><a href="<%= post_url(post) %>" style="color:#333"><%= post_url_no_http(post) %></a> (<%= post.comments.count %> Comments)</p>
		</div>

		
	</div>

	<div style="clear:both; margin-bottom:20px;"></div>
<% end %>